<div class="container my-5">
  
  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">店舗一覧</h3>
  </div>
  
  <div class="row text-right">
    <%= link_to "+", new_admin_space_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow" %>
  </div>
  
  <div class="row mt-5">
    <table class="table table-bordered border-dark">
      <thead>
        <tr class="bg-secondary text-light">
          <th>店舗ID</th>
          <th>店名</th>
          <th>評価</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @spaces.each do |space| %>
        <tr>
          <td><%= space.id %></td>
          <td><%= link_to space.name,admin_space_path(space.id) %></td>
          <td><%= space.address %></td>
          <td><% if space.is_active? %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-secondary">閉店</span>
              <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="container">
    <div class="row">
     <div class="col-md-4 offset-md-4 py-2  mt-5">
      
     </div>
    </div>
  </div>
</div>
