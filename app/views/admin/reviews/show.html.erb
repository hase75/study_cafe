<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">レビュー詳細</h3>
  </div>

  <div class="row mt-3">
    <div class="col-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>投稿日時</td>
            <td><%= @review.created_at %></td>
          </tr>
          <tr>
            <td>ユーザー名</td>
            <td><%= @review.customer.name %></td>
          </tr>
          <tr>
            <td>評価</td>
            <td><%= @review.rating %></td>
          </tr>
          <tr>
            <td>コメント</td>
            <td><%= @review.comment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to "削除する", admin_review_path(review.id), method: :delete,"data-confirm" => "Are you sure?", class: "btn btn-success" %>
  </div>
</div>