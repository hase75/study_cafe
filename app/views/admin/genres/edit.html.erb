<!--管理者のジャンル編集画面-->

<div class="container my-5">
  <div class="row">
    <div class="col-4 mx-auto">
      <h3 class="font-weight-bold mb-5">ジャンル編集</h3>
      <%= form_with model: @genre, url:admin_genre_path do |f| %>
        <!--エラーメッセージの部分テンプレート-->
        <%= render 'layouts/error_messages', model: f.object %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control" %>
            <%= f.submit '変更を保存' , class: "btn btn-success mt-4" %>
            <%= link_to "戻る", admin_genres_path, class: "btn btn-secondary mt-4 ml-3" %>
          </div>
      <% end %>
    </div>
  </div>
</div>