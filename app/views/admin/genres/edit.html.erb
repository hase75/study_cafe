<div class="container my-5">
  
  <div class="row offset-3">
    <h3 class="border rounded shadow-sm font-weight-bold px-3 mb-5 text-center">ジャンル編集</h3>
  </div>

  <%= form_with model: @genre, url:admin_genre_path do |f| %>
   <%= render 'layouts/error_messages', model: f.object %>
  <div class="row mb-5 d-flex align-items-center justify-content-center">
    <div class="col-6">
      <div class="form-group row">
        <%= f.text_field :name %>
        <%= f.submit '変更を保存' , class: "btn btn-success ml-5" %>
        <%= link_to "戻る", admin_genres_path, class: "btn btn-secondary ml-5" %>
      </div>
    </div>
  </div>
  <% end %>
    
</div>