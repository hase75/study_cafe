<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">会員情報編集</h3>
  </div>

  <%= form_with model: @customer, url:admin_customer_path do |f| %>

  <div class="row mt-5">
      <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :id, "会員id", class: "col-sm-4" %>
          <%= f.label @customer.id, class: "col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :name, "氏名", class: "col-sm-4" %>
          <%= f.text_field :name, class: "form-control col-sm-4" %>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-4" %>
          <%= f.text_field :email, class: "form-control col-sm-8" %>
        </div>
        <div class="form-group row">
          <%= f.label :is_deleted, "会員ステータス", class: "ml-3" %>
          <div class="form-check ml-4">
            <%= f.radio_button :is_deleted,true %>
            <%= f.label :is_deleted, "退会" %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.submit "変更を保存", class: "btn btn-success mx-auto" %>
        </div>
      </div>
    </div>
  <% end %>
</div>