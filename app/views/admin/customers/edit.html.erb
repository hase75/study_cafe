<div class="container my-5">
  <div class="row">
    <div class="col-4 mx-auto">
      <h3 class="font-weight-bold mb-5">会員情報編集</h3>
      <%= form_with model: @customer, url:admin_customer_path do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
    
        <div class="form-group">
          <%= f.label :id, "会員id" %>
          <%= f.label @customer.id%>
        </div>
        <div class="form-group">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :is_deleted, "会員ステータス" %>
          <div class="form-check">
            <%= f.radio_button :is_deleted,true %>
            <%= f.label :is_deleted, "退会" %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "変更を保存", class: "btn btn-success mt-3" %>
          <%= link_to "戻る", admin_customer_path, class: "btn btn-secondary ml-3 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>