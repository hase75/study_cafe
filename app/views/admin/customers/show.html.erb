<div class="container my-5">
  <div class="row">

    <div class="col-12">
      <div class="row offset-3 pl-5">
        <div class="col-3">
          <h3 class="border rounded shadow-sm font-weight-bold mb-5 d-flex align-items-center justify-content-center">会員詳細</h3>
        </div>
      </div>
      
      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-5">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>会員ID</td>
                <td><%= @customer.id %></td>
              </tr>
              <tr>
                <td>ユーザー名</td>
                <td><%= @customer.name %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
              <tr>
                <td>会員ステータスス</td>
                <td>
                  <% if @customer.is_deleted? %>
                    <span class="text-secondary">退会</span>
                  <% else %>
                    <span class="text-success">有効</span>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row mt-3 d-flex align-items-center justify-content-center">
        <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>