<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">会員詳細</h3>
  </div>

  <div class="row mt-3">
    <div class="col-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>ユーザー名</td>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータスス</td>
            <td>
              <% if @customer.is_deleted? %>
                <span class="text-secondary">退会</span>
              <% else %>
                <span class="text-success">有効</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
  </div>
</div>