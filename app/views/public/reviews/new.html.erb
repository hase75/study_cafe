<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3 mb-5 text-center">レビューの投稿・編集</h3>
  </div>

  <%= form_with model: @review, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group row" id="rating">
        <%= f.label :rating, "評価", class:"col-3 col-form-label" %>
        <%= f.hidden_field :rating %>
      </div>
        <script>
        $('#rating').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',

          scoreName: 'review[rating]',
          score: <%= @review.rating || 0 %>,
          half: true
        });
        </script>
    </div>
  </div>

  <div class="form-group row mt-3 mb-5">
    <%= f.text_area :comment, :size=>"60x10", class: "form-control col-lg-6" %>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: "btn btn-success" %>
    <%= link_to "戻る", space_path(@space_id), class: "btn btn-secondary ml-5" %>
  </div>

  <%= f.hidden_field :space_id, value: @space_id %>
  <% end %>
</div>