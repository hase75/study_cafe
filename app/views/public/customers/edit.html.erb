<!--ユーザーの会員情報編集画面-->

<div class="container my-5">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <h3 class="font-weight-bold mb-5">会員情報編集</h3>
      <%= form_with model: @customer, url:customers_information_path do |f| %>
        <!--エラーメッセージの部分テンプレート-->
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <p>ユーザー名</p>
          <%= f.text_field :name %>
        </div>
        <div class="form-group mt-3">
          <p>メールアドレス</p>
          <%= f.text_field :email %>
        </div>
        <div class="form-group mt-3">
          <%= f.submit '編集内容を保存', class: "btn btn-success mt-3" %>
          <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger mt-3 ml-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>