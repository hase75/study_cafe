<div class="container my-5">
  
  <div class="row offset-lg-3 pl-2">
    <h3 class="border rounded shadow-sm font-weight-bold mb-5 text-center">会員情報編集</h3>
  </div>

  <%= form_with model: @customer, url:customers_information_path do |f| %>
   <%= render 'layouts/error_messages', model: f.object %>
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-lg-6">
      <div class="form-group">
        <p>ユーザー名</p>
        <%= f.text_field :name %>
      </div>
      <div class="form-group mt-3">
        <p>メールアドレス</p>
        <%= f.text_field :email %>
      </div>
      <div class="form-group mt-3">
        <%= f.submit '編集内容を保存', class: "btn btn-success mt-5" %>
        <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger mt-5 ml-5" %>
      </div>
    </div>
  </div>
  <% end %>

</div>