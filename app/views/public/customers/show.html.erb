<div class="container my-5">

  <div class="row">
    <div class="offset-1">
      <h3 class="border rounded shadow-sm font-weight-bold px-3">マイページ</h3>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="offset-1 col-8">
      <div class="row">
        <h4>登録情報</h4>
        <%= link_to "編集する", customers_infomation_edit_path, class: "btn btn-outline-success ml-5" %>
      </div>
      <div class="row mt-3">
        <table class="table table-bordered border-dark">
          <tbody>
            <tr>
              <td class="bg-secondary text-light">氏名</td>
              <td><%= @customer.full_name %></td>
            </tr>
            <tr>
              <td class="bg-secondary text-light">メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>