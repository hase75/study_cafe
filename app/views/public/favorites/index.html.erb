<table>
  <div>お気に入り一覧</div>
  <thead>
    <tr>
      <th>店舗名</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td>
          <%= link_to space_path(favorite.space.id), class:"text-decoration-none" do %>
            <%= image_tag favorite.space.get_image, size: '150x150', class: "rounded" %>
          <% end %>
          <%= link_to favorite.space.name, space_path(favorite.space.id), class:"text-decoration-none font-weight-bold pl-5" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>