<div class="container my-5">

  <div class="row">
    <h3 class="border rounded shadow-sm font-weight-bold px-3">店舗詳細</h3>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-3">
      <%= image_tag @space.get_image, size: '300x300', class: "rounded" %>
    </div>
    <div class="col-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>店舗名</td>
            <td><%= @space.name %></td>
          </tr>
          <tr>
            <td>店舗紹介文</td>
            <td><%= @space.introduction %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @space.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @space.telephone_number %></td>
          </tr>
          <tr>
            <td>WEBサイトURL</td>
            <td><%= @space.website %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div>
    <%= link_to 'レビューを投稿する', new_review_path(space_id: @space.id) %>
  </div>
</div>



<% @reviews.each do |review|%>

  <div class=card>
    <p>コメント:<%= review.comment %></p>
    <p>評価 :<%= review.rating %>点</p>
    <div id="rating-rate<%= review.id %>"></div>    
    <script>
      $('#rating-rate<%= review.id%>').raty({
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= review.rating || 0 %>,
      });
    </script>
  </div>
<% end %>