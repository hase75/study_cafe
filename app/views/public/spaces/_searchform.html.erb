<%= search_form_for q, url: spaces_path do |f| %>

  <div class="searches-body">
    <div class="search-body__subtitle">詳細検索</div>

    <!-- キーワード検索 -->
    <div class="form-group">
      <label>
        <i class="fas fa-plus icon"></i>
        <span>ジャンルから探す</span>
      </label>
      <%= f.search_field :genre_name_cont, class: "input-default", placeholder: '例）カフェ' %>
    </div>

    <!-- 駅名検索 -->
    <div class="form-group">
      <label>
        <i class="fas fa-tag icon"></i>
        <span>駅名から探す</span>
      </label>
      <%= f.search_field :station_cont, class: "input-default", placeholder: '例）新宿駅' %>
    </div>

    <!-- 時間検索 -->
    <div class="form-group">
      <label>
        <i class="fas fa-coins icon"></i>
        <span>営業時間</span>
      </label>
      <div class="form_money">
        <%= f.time_select :start_time_eq, {minute_step: 15, default: {hour: 0, minute: 0}} %>
      </div>
    </div>

    <!-- 絞り込み検索（店舗の設備） -->
    <div class="form-group">
      <label>
        <i class="fas fa-star icon"></i>
        <span>店舗の設備</span>
      </label>
      <div class="checkbox">
        <div class="checkbox-default">
          <label>
            <input type="checkbox">
            すべて
            <i class="check-icon"></i>
          </label>
        </div>
        <div class="checkbox-default">
          <label>
            <%= f.check_box :wifi_cont , {multiple: true} , true, false %>
            Wi-Fi
            <i class="check-icon"></i>
          </label>
        </div>
        <div class="checkbox-default">
          <label>
            <%= f.check_box :outlet_cont , {multiple: true} , true, false %>
            コンセント
            <i class="check-icon"></i>
          </label>
        </div>
        <div class="checkbox-default">
          <label>
            <%= f.check_box :private_room_cont , {multiple: true} , true, false %>
            個室
            <i class="check-icon"></i>
          </label>
        </div>
        <div class="checkbox-default">
          <label>
            <%= f.check_box :smoking_cont , {multiple: true} , "禁煙", nil %>
            禁煙
            <i class="check-icon"></i>
          </label>
        </div>
        <div class="checkbox-default">
          <label>
            <%= f.check_box :smoking_cont , {multiple: true} , "喫煙可", nil %>
            喫煙可
            <i class="check-icon"></i>
          </label>
        </div>
    　</div>
    </div>
  </div>

  <div class="search-done-btn">
    <%= f.button "クリア", type: "reset", class: "btn-default btn-gray" %>
    <%= f.submit "完了", class: "btn-default btn-red" %>
  </div>
<% end %>