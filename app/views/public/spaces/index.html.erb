<!--ユーザーの店舗検索画面-->

<div class="container my-5">
  <div class="row">

    <div class="col-lg-3 pr-5">
      <div class="row">
        <h3 class="font-weight-bold ml-3 mb-4 text-center">店舗を探す</h3>
      </div>
      <div class="sidebar_fixed">
        <!--詳細検索の部分テンプレート-->
        <%= render 'public/spaces/searchform', q: @q, url: spaces_path %>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="row mt-4">
        <div class="col-lg-12 col-xs-12">
          <!--位置情報の部分テンプレート-->
          <%= render 'public/spaces/map', spaces: @spaces, url: spaces_path %>
        </div>
      </div>
      
      <div class="row d-flex align-items-center justify-content-center">
  	    <div class="mt-5">
  	      <!--ページネーション-->
  	      <%= paginate @spaces %>
  	    </div>
      </div>
    </div>
  </div>
</div>